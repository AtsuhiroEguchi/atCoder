def func():
    N, X = map(int, input().split())
    S = input()
    counter = X
 
    for i in range(N):
        if S[i] == "o":
            counter += 1
 
        elif S[i] == "x":
            if counter >= 1:
                counter -= 1
 
    print(counter)
 
 
# Press the green button in the gutter to run the script.
if __name__ == '__main__':
    func()
 
